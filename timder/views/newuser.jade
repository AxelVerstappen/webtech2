extends layout

block content
    h1= title
    form#formAddUser(name="adduser",method="post",action="/adduser")
      div#accountDetails
        label(for="firstname")="Voornaam: "
        input#inputFirstName(type="text", placeholder="Voornaam", name="firstname")

        label(for="lastname")="Achternaam: "
        input#inputLastName(type="text", placeholder="Achternaam", name="lastname")
        br

        label(for="useremail")="Email: "
        input#inputUserEmail(type="text", placeholder="Email", name="useremail")

        br
        input#volgende(type="button", value="Volgende stap", name="volgende")

      div#accountWork
        input.inputWorkPhoto(type="text", placeholder="Photo 1 url", name="workphoto1")
        input.inputWorkPhoto(type="text", placeholder="Photo 2 url", name="workphoto2")
        input.inputWorkPhoto(type="text", placeholder="Photo 3 url", name="workphoto3")
        br
        textarea.inputWorkText(type="text", placeholder="Work 1 text", name="worktext1")
        textarea.inputWorkText(type="text", placeholder="Work 2 text", name="worktext2")
        textarea.inputWorkText(type="text", placeholder="Work 3 text", name="worktext3")
        br
        select#inputWorkType(name="worktype")
         option(value="design")="Design"
         option(value="development")="Development"
         option(value="designdevelopment")="Design & Development"
        
        button#btnSubmit(type="submit") Submit